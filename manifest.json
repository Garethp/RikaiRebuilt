{
  "manifest_version": 2,
  "author": "Gareth Parker",
  "name": "RikaiRebuilt",
  "version": "1.1.2",

  "applications": {
    "gecko": {
      "id": "{3b5a4a18-bf58-4434-adec-106450a33368}"
    }
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icons/smile.png"
    }
  },

  "icons": {
    "48": "icons/smile.png"
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "contextMenus",
    "nativeMessaging"
  ],

  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles/popup.css"
      ]
    }
  ],

  "options_ui": {
    "open_in_tab": true,
    "page": "src/options/options.html"
  }
}
