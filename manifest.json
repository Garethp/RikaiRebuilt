{
  "manifest_version": 2,
  "author": "Gareth Parker",
  "name": "RikaiRebuilt",
  "version": "1.0.2",

  "browser_action": {
    "default_icon": {
      "48": "icons/smile.png"
    }
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ],

  "background": {
    "persistent": true,
    "scripts": [
      "dist/idb.js",
      "dist/browser-polyfill.min.js",
      "src/defaultConfig.js",
      "src/utils.js",
      "src/audioPlayer.js",
      "src/ankiImport.js",
      "src/removeFromArray.js",
      "src/config.js",
      "src/FileReader.js",
      "src/deinflectText.js",
      "src/deinflect.js",
      "src/dictionary.js",
      "src/auto-bind.js",
      "src/data.js",
      "src/background.js"
    ]
  },

  "options_ui": {
    "open_in_tab": true,
    "page": "src/options/options.html"
  }
}
