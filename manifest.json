{
  "manifest_version": 2,
  "author": "Gareth Parker",
  "name": "RikaiRebuilt",
  "version": "1.0.14",

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icons/smile.png"
    }
  },

  "icons": {
    "48": "icons/smile.png"
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "contextMenus"
  ],

  "background": {
    "persistent": true,
    "scripts": [
      "dist/dexie.min.js",
      "dist/idb.js",
      "dist/browser-polyfill.min.js",
      "src/defaultConfig.js",
      "src/utils.js",
      "src/audioPlayer.js",
      "src/ankiImport.js",
      "src/removeFromArray.js",
      "src/FileReader.js",
      "src/deinflectText.js",
      "src/deinflect.js",
      "src/dictionary.js",
      "src/FrequencyDb.js",
      "src/auto-bind.js",
      "src/data.js",
      "src/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/defaultConfig.js",
        "dist/browser-polyfill.min.js",
        "src/content/document.js",
        "src/content/source.js",
        "src/content/index.js"
      ],
      "css": [
        "styles/popup-blue.css"
      ]
    }
  ],

  "options_ui": {
    "open_in_tab": true,
    "page": "src/options/options.html"
  }
}
